{
  "version": "1.0.1",
  "id": "@shopgate/minimum-advertising-pricing",
  "components": [
    {
      "id": "ProductDetailPrice",
      "path": "frontend/pages/product/ProductDetailPrice/index.jsx",
      "target": "product.price",
      "type": "portals"
    },
    {
      "id": "ProductDetailStrikePrice",
      "path": "frontend/pages/product/ProductDetailStrikePrice/index.jsx",
      "target": "product.price-striked",
      "type": "portals"
    },
    {
      "id": "CategoryItemPrice",
      "path": "frontend/pages/category/CategoryItemPrice/index.jsx",
      "target": "product-item.price",
      "type": "portals"
    },
    {
      "id": "CategoryItemDiscountBadge",
      "path": "frontend/pages/category/DiscountBadge/index.jsx",
      "target": "product-item.discount",
      "type": "portals"
    },
    {
      "id": "FavlistPrices",
      "path": "frontend/pages/favlist/Price/index.jsx",
      "target": "favorites.product-price",
      "type": "portals"
    },
    {
      "type": "translations",
      "path": "frontend/locale/en-US.json",
      "id": "locale/en-US"
    }
  ],
  "configuration": {
  },
  "steps": [
    {
      "path": "extension/flagMapProducts.js",
      "hooks": ["shopgate.catalog.getProducts.v1:afterFetchProducts"],
      "input": [
        {"key": "products"}
      ],
      "output": [
        {"key": "products"}
      ]
    }
  ]
}
